<Window x:Name="Window_MainWindow" x:Class="Lab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab6"
        mc:Ignorable="d"
        Title="The Wailing Vagabond - Sumulator" Height="768" Width="1298" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1273.6"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="GroupBox_Bartenders" Header="Bartenders" Margin="0,0,954.4,288.4" HorizontalAlignment="Center" Width="320">
            <Grid x:Name="Grid_Bartenders" Margin="0,0,-2.8,-12.6">
                <ListBox x:Name="ListBox_Bartender" Margin="0,0,0,30" Grid.Column="0"/>
                <CheckBox x:Name="RadioButton_Bartender" Content="Pause all Bartenders" Margin="10,0,55,9" Height="16" VerticalAlignment="Bottom"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="GroupBox_Bouncers" Header="Bouncers" Margin="320,0,634.4,288.4" HorizontalAlignment="Center" Width="320">
            <Grid x:Name="Grid_Bouncers" Margin="0,0,-2.8,-12.6">
                <ListBox x:Name="ListBox_Bouncers" Margin="0,0,0,30"/>
                <CheckBox x:Name="RadioButton_Bouncers" Content="Pause all Bouncers" Margin="10,0,63,9" Height="16" VerticalAlignment="Bottom"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="GroupBox_ServicePersonel" Header="Service Personel" Margin="640,0,314.4,288.4" HorizontalAlignment="Center" Width="320">
            <Grid x:Name="Grid_ServicePersonel" Margin="0,0,-2.8,-12.6">
                <ListBox x:Name="ListBox_ServicePersonel" Margin="0,0,0,30"/>
                <CheckBox x:Name="RadioButton_ServicePersonel" Content="Pause all Service Personel" Margin="10,0,26,9" Height="16" VerticalAlignment="Bottom"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="GroupBox_Patrons" Header="Patrons" Margin="960,0,-5.6,51" HorizontalAlignment="Center" Width="320">
            <Grid x:Name="Grid_Patrons" Margin="0,0,-2.8,-12.6">
                <ListBox x:Name="ListBox_Patrons" Margin="0,0,0,30"/>
                <CheckBox x:Name="RadioButton_Patrons" Content="Pause all Patrons" Margin="10,0,71,9" Height="16" VerticalAlignment="Bottom" Checked="RadioButton_Patrons_Checked" Click="RadioButton_Patrons_Click"/>
            </Grid>
        </GroupBox>
        <StatusBar Margin="0,0,-0.2,0" Height="36" VerticalAlignment="Bottom">
            <Button x:Name="Button_StartStopDay" Content="Start/stop" Width="75"/>
            <Button x:Name="Button_RestartDay" Content="Restart" Width="75" Click="Button_RestartDay_Click"/>
            <Label x:Name="Lable_TimeLeft" Content="Label"/>
            <Slider x:Name="Slider_TimeModifyer" Width="130" TickPlacement="BottomRight" Maximum="5" Interval="5" ValueChanged="Slider_TimeModifyer_ValueChanged" Minimum="1" IsSnapToTickEnabled="True" IsEnabled="False"/>
            <Label x:Name="Lable_TimeModifyer" Content="0"/>
        </StatusBar>
        <GroupBox x:Name="GroupBox_ControlPanel" Header="Control Panel" Margin="1328,0,-483.6,51.4" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <GroupBox Header="GroupBox" HorizontalAlignment="Left" Height="247" Margin="0,450,0,0" VerticalAlignment="Top" Width="960">
            <Grid HorizontalAlignment="Left" Width="940" Margin="10,10,-2.8,0"/>
        </GroupBox>
    </Grid>
</Window>
